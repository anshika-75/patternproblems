#include<iostream>
using namespace std;
void pattern(int n){
    for (int i=n;i>0;i--){
        for(int j=1;j<=i;j++){
            cout<<"*";
        }
        cout<<endl;
    }
}
int main() {
    int n;
    cout<<"enter the number:";
    cin>>n;
    pattern(n);
    return 0;
}
output
enter the number:4
****
***
**
*
